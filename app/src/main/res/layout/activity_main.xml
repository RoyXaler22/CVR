<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Entrada">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="111dp"
        android:layout_height="99dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbTitulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589"
        app:srcCompat="@drawable/logo_base"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgFondo_1"
        android:layout_width="204dp"
        android:layout_height="210dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/inicio_fondo_2"
        app:layout_constraintBottom_toBottomOf="@+id/lbTitulo"
        app:layout_constraintEnd_toStartOf="@+id/imgFondo_2"
        tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/lbDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/organiza_tu_vida_simplifica_tu_dia"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbTitulo"
        android:layout_width="124dp"
        android:layout_height="81dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/cvr"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F1C74B"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585"
        tools:ignore="TextContrastCheck,TextSizeCheck" />

    <ImageView
        android:id="@+id/imgFondo_2"
        android:layout_width="203dp"
        android:layout_height="201dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="232dp"
        android:src="@drawable/inicio_fondo_3"
        app:layout_constraintBottom_toTopOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="@+id/lbTitulo"
        tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds" />

    <ImageView
        android:id="@+id/imgFondo_3"
        android:layout_width="203dp"
        android:layout_height="201dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/inicio_fondo_1"
        app:layout_constraintBottom_toTopOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928"
        tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds" />
</androidx.constraintlayout.widget.ConstraintLayout>